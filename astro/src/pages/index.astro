<BaseLayout>
<style>
.cursor { animation: blink 1s infinite;
}

@keyframes blink{
    0%, 50% {
        opacity: 1;
    }
    51%, 100% {
        opacity: 0;
    }
}
</style>
<script>
    var i = 0;
    var txt = 'Making music through code.';
    var speed = 100;

    function typeWriter() {
    if (i < txt.length) {
        var demo = document.getElementById("demo");
        var cursor = demo.querySelector('.cursor');
            
        demo.insertBefore(document.createTextNode(txt.charAt(i)), cursor);
        i++;
        setTimeout(typeWriter, speed);
    }
}
document.addEventListener('DOMContentLoaded', () => {
    typeWriter();
});
</script>
<main>
